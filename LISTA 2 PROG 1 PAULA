/*

#include <iostream>
#include <fstream>
#include <cmath>
using namespace std;
int main()

{
	float total, valor, parcelas, valorants, prestants, prestdps, valordps, desconto;


	ifstream arquivo("venda.txt");
	arquivo >> valor >> parcelas;
	arquivo.close();


	desconto = (valor/10);
	total = valor + desconto;

	
	valorants = total;
	prestants = total/parcelas;
	prestdps = prestants - prestants*0.1;
	valordps = prestdps * parcelas;


	ofstream escrever("cliente.txt");
	escrever << valorants << endl << prestants << endl << prestdps << endl << valordps;
	escrever.close();

	return 0;

}

*/

